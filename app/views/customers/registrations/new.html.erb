<section class="section px-6">
  <div class="grid">
    <div class="cell is-col-span-8 card p-0">
      <header class="card-header py-5">
        <h2 class="card-header-title title is-3">Sign Up</h2>
      </header>
      <div class="card-content px-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customers/shared/error_messages", resource: resource %>

          <div class="fixed-grid has-1-cols">
            <div class="field grid">
              <%= f.label :name, class: "cell is-col-span-1 mt-4 mb-2" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "cell is-col-span-1 input is-rounded" %>
            </div>

            <div class="field grid">
              <%= f.label :username, class: "mt-4 mb-2" %>
              <%= f.text_field :username, autocomplete: "username", class: "input is-rounded" %>
            </div>

            <div class="field grid">
              <%= f.label :email, class: "mt-4 mb-2" %>
              <%= f.email_field :email, autocomplete: "email", class: "input is-rounded" %>
            </div>

            <div class="field grid">
              <%= f.label :address, class: "mt-4 mb-2" %>
              <%= f.text_field :address, class: "input is-rounded" %>
            </div>

            <div class="grid my-4">
              <%= f.label :province_id, class: "mr-4" %>

              <div class="cell">
                <div class="select">
                  <%= f.select :province_id, Province.order(:name).map { |p| [p.name, p.id] } %>
                </div>
              </div>
            </div>

            <div class="field grid mt-4 mb-2">
              <div class="cell">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>

              <%= f.password_field :password, autocomplete: "new-password", class: "cell input is-rounded" %>
            </div>

            <div class="field grid">
              <%= f.label :password_confirmation, class: "mt-4 mb-2" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "cell input is-rounded" %>
            </div>

            <div class="actions my-5">
              <%= f.submit "Sign up", class: "button is-link" %>
            </div>
          </div>
        <% end %>

        <%= render "customers/shared/links" %>
      </div>
    </div>
  </div>
</section>
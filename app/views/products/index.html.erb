<section class="section">
  <div class="grid p-6">
    <div class="cell is-col-span-12">
      <div class="grid">
        <div class="cell">
          <h1 class="title is-1">Forest Critter Crafting</h1>

          <h2 class="subtitle is-5">Made with love and immense amounts of detail</h2>
        </div>
      </div>
    </div>
    <div class="cell is-col-span-12">
      <div class="grid is-gap-0 is-col-min-10">
        <% @products.each do |product| %>
          <%= link_to product, class: "product-card-link" do %>
            <div class="cell card is-shadowless is-radiusless m-0">
              <div class="card-image p-5">
                <figure class="image">
                  <%= image_tag product.image.variant(:small_display), alt: product.name %>
                </figure>
              </div>
              <div class="card-content">
                <div class="media-content">
                  <p class="title is-4"><%= product.name %></p>
                  <p class="subtitle is-6">$<%= product.price %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
